div (ng-click='edit()' ng-if='notEditing')
  .brewery-details {{ brewery.label() }}

div (ng-if='editing')
  brewery-form (brewery='brewery' after-save='afterSave(brewery)')
  input (type='button' ng-click='cancel()' value='Cancel')

input (type='button' ng-click='delete({brewery: brewery})' value='Delete')

